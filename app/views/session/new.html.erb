<div class="formContainer">
  <div class="form">
    <h2> Connexion </h2>

    <%= form_with url: session_index_path, local: true do |f| %>

      <div class="formItem">
        <%= f.label :adresse_email %>
        <%= f.text_field :email, class:"form-control" %>
      </div>

      <div class="formItem">
        <%= f.label :mot_de_passe %>
        <%= f.password_field :password, class:"form-control" %>
      </div>

      <div class="formSessionActions">
        <%= f.submit "Log in" %>
        <a href="/registration/new">Cr√©er un compte</a>
      </div>

    <% end %>
  </div>
</div>
